<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
  <ul>
    <% category.items.each do |item|%>
      <li><%= item.title %> | <%= number_to_currency(item.price/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) if !current_user.nil? %></li>
    <% end %>
  </ul>
<% end %>